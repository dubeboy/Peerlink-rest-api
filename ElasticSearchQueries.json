— finally working

GET peerlink/_search
{
  "query": {
    "bool": {
      "must": {
        "fuzzy" : {
            "body" : {
                "value" :         "atm",
                    "boost" :         1.0,
                    "fuzziness" :     2,
                    "prefix_length" : 0,
                    "max_expansions": 100
            }
        }
      },
      "filter": {
        "nested" : {
            "path" : "tags",
            "query" : {
                      "match": {
                      "tags.name": "phy1a"
                  }
            },
            "score_mode" : "avg"
        }
      }
    }
  }
}

GET peerlink/_search
{
  "query": {
    "bool": {
      "must": {
        "function_score": {
            "query": {
                "multi_match": {
                    "query": "We doing magnets",
                    "fields": [
                        "title^3",
                        "body^2.5"
                    ],
                    "fuzziness" : "2",
                    "prefix_length" : 0,
                    "max_expansions": 100,
                    "boost" :         1.0
                }
            }
        }
      },
      "filter": {
        "nested" : {
            "path" : "tags",
            "query" : {
                       "bool": {
          "should": [
            {
              "match": {
                "tags.name": "phy1a"
              }
            }, 
            {
               "match": {
                "tags.name": "atom"
              }
            }
          ]
        }
            },
            "score_mode" : "avg"
        }
      }
    }
  }
}

